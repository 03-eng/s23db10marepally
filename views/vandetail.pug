extends layout
block content
    h1= title
    if (toShow == null)
      h2 No instance to show
    else
        - let vanid = toShow._id
        - let vancolor = toShow.vancolor
        - let vanmodel = toShow.vanmodel
        - let vansize = toShow.vanprice
        div
        div.row
            div(class='vanAttr mr-3') van ID is:
            div #{vanid}
        div.row
            div(class='vanAttr mr-3') van Type is:
            div #{vancolor}
        div.row
            div(class='vanAttr mr-3') van price is:
            div #{vansize}
        div.row
            div(class='vanAttr mr-3') van model is:
            div #{vanmodel}  